    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend/",
            "program": "${workspaceRoot}/backend/main.py",
            "console": "integratedTerminal"
        },
        {
            "type": "pwa-chrome",
            "name": "FrontEnd",
            "request": "launch",
            "webRoot": "${workspaceFolder}/templates/",
            "url": "http://127.0.0.1:5000"
        }
    ],
    "compounds": [
        {
            "name": "Back/Front End",
            "configurations": [
                "Backend",
                "FrontEnd"
            ]
        }
    ]
}